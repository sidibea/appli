{% extends "NBAdminBundle::layout.html.twig" %}

{% block title %} {{ agent.fullName }} {% endblock %}

{% block content %}

    <div class="col-md-12">
        {{ form_start(form) }}
        {{ form_errors(form) }}
        <div class="ms-panel">
            <div class="ms-panel-header">
                <div class="d-flex justify-content-between">
                    <div class="ms-header-text">
                        <h6>Modification agent: {{ agent.fullName }}</h6>
                    </div>
                </div>
                <div class="ms-panel-body">
                    <div class="form-group">
                        <label for="exampleEmail">Type</label>
                        {{ form_widget(form.type, {'attr': {'class': 'form-control' }}) }}
                    </div>
                    <div class="form-group">
                        <label for="exampleEmail">Nom de l'entreprise</label>
                        {{ form_widget(form.raisonSociale, {'attr': {'class': 'form-control' }}) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="exampleEmail">Nom</label>
                                {{ form_widget(form.nom, {'attr': {'class': 'form-control' }}) }}
                            </div>

                        </div>
                        <div class="col-md-6">

                            <div class="form-group">
                                <label for="exampleEmail">Prenom</label>
                                {{ form_widget(form.prenom, {'attr': {'class': 'form-control' }}) }}
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleEmail">Telephone</label>
                        {{ form_widget(form.telephone, {'attr': {'class': 'form-control' }}) }}
                    </div>
                    <div class="form-group">
                        <label for="exampleEmail">Adresse</label>
                        {{ form_widget(form.adresse, {'attr': {'class': 'form-control' }}) }}
                    </div>
                    <div class="form-group">
                        <label for="exampleEmail">Description</label>
                        {{ form_widget(form.description, {'attr': {'class': 'form-control' }}) }}
                    </div>

                </div>
                <div class="ms-panel-footer">
                    <button type="submit" class="btn btn-primary">Enregistrer</button>
                </div>
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>


{% endblock %}